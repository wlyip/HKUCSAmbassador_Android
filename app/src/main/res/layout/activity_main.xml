<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="   Welcome to HKU Info Day"
        android:textSize="22sp" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        android:backgroundTint="#506497"
        android:text="Chatbot"
        android:textSize="22sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/csHomepageButton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/chatButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="#6383A4"
        android:text="HKUCS Homepage"
        android:textSize="22sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/otherViewButton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/csHomepageButton"
        android:layout_marginTop="10dp"
        android:backgroundTint="#6383A4"
        android:text="Others"
        android:textSize="22sp"
        android:textColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>